name: Deploy to AWS

on:
  push:
    branches:
      - main
      - dev
  # Adicione outros eventos de gatilho conforme necess√°rio

jobs:
  build-job:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v2

      - name: Set up Docker
        uses: actions/setup-docker@v2

      - name: Build Docker Image
        run: docker build -t painelatualizacao-api:latest -f Dockerfile .

  package-job:
    runs-on: ubuntu-latest
    needs: build-job
    steps:
      - name: Checkout Code
        uses: actions/checkout@v2

      - name: Docker Login
        run: docker login -u ${{ secrets.CI_DOCKER_REGISTRY_USERNAME }} -p ${{ secrets.CI_DOCKER_REGISTRY_PASS }}

      - name: Docker Push
        run: docker push painelatualizacao-api:latest

  deploy-job:
    runs-on: ubuntu-latest
    needs: package-job
    steps:
      - name: Checkout Code
        uses: actions/checkout@v2

      - name: SSH into EC2 and Deploy
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.EC2_HOST }}
          username: ${{ secrets.EC2_USERNAME }}
          key: ${{ secrets.EC2_SSH_KEY }}
          script: |
            docker stop painelatualizacao-api || true
            docker rm painelatualizacao-api || true
            docker pull painelatualizacao-api:latest
            docker-compose -f docker-compose.yml up -d
